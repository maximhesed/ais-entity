        <StackPanel Grid.Column='0' Margin='0 4 0 0'>
            <Button Name='btnEmployees' Content='Employees' Click='btnEmployees_Click' Visibility='Collapsed' />
            <Button Name='btnLeads' Content='Leads' Click='btnLeads_Click' Visibility='Collapsed' />
            <Button Name='btnGroups' Content='Groups' Click='btnGroups_Click' Visibility='Collapsed' />
            <Button Name='btnCampaigns' Content='Campaigns' Click='btnCampaigns_Click' Visibility='Collapsed' />
            <Button Name='btnOrdReqs' Content='Order requests' Click='btnOrdReqs_Click' Visibility='Collapsed' />
            <Button Name='btnContractorsMedia' Content='Media contractors' Click='btnContractorsMedia_Click' Visibility='Collapsed' />
            <Button Name='btnContractorsProduction' Content='Production contractors' Click='btnContractorsProduction_Click' Visibility='Collapsed' />
            <Button Name='btnStock' Content='Stock' Click='btnStock_Click' Visibility='Collapsed' />
        </StackPanel>

        <Frame Grid.Column='1' x:Name='FrameMain' NavigationUIVisibility='Hidden' Margin='5' Background='AliceBlue' />
    </Grid>
</Window>
