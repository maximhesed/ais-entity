<Window x:Class="Ais.src.winMain" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="Company" Width="1150" Height="600" WindowStartupLocation='CenterScreen' MinWidth='800' MinHeight='410' Closing='Window_Closing'>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width='190' />
            <ColumnDefinition Width='1*' />
