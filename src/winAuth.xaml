<Window x:Class="Ais.src.winAuth" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="Auth" Height="180" Width="450" Loaded='Window_Loaded' MinWidth='470' MinHeight='190' MaxHeight='190' WindowStartupLocation='CenterScreen'>
    <Grid>
        <StackPanel Margin='0' Grid.Row='1'>
            <Label HorizontalAlignment='Center' FontSize='25'>Welcome to the Company interface!</Label>
            <TextBox x:Name='txtLogin' Grid.Row='0' Grid.Column='1' Margin='150 10 150 0' Text='login' TextAlignment='Center' Height='25' VerticalContentAlignment='Center' />
            <TextBox x:Name='txtPassw' Grid.Row='1' Grid.Column='1' Margin='150 5 150 0' Text='password' TextAlignment='Center' Height='25' VerticalContentAlignment='Center' SelectionChanged='txtPassw_SelectionChanged' />
            <Button x:Name='btnLogin' Grid.Row='2' Grid.Column='1' Margin='190,10,190,0' Click='btnLogin_Click' HorizontalAlignment='Center' Width='72' FontSize='12'>Log in</Button>
        </StackPanel>
    </Grid>
</Window>
