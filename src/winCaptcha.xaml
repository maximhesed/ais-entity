<Window x:Class="Ais.src.winCaptcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="Captcha" Height="175" Width="200" MinHeight='185' MinWidth='220' MaxHeight='175' MaxWidth='175' Loaded='Window_Loaded' WindowStartupLocation='CenterScreen'>
    <Grid>
        <StackPanel>
            <Label x:Name='lblInfo' Margin='10 10 10 0' HorizontalAlignment='Center'>Enter the captcha to continue</Label>
            <Label x:Name='lblCaptcha' Margin='10 -5 10 0' HorizontalAlignment='Center' FontSize='20' Content='WWWWW'/>
            <TextBox x:Name='txtCaptcha' Margin='50 5 50 0' TextAlignment='Center' MaxLength='5' FontSize='20' />
            <Button x:Name='btnCaptcha' Margin='65 10 65 0' Click='btnCaptcha_Click'>Proceed</Button>
        </StackPanel>
    </Grid>
</Window>
